<!-- Content Header (Page header) -->
<%- include('../partials/content/content_header.ejs', { title:" Products" }) %>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">

    <div class="card">
      <div class="card-body">

        <!-- TODO: query can be paginated -->
        <form action="/dashboard/products" method="GET">
          <div class="input-group">
            <input id="search" name="q" value="<%= query || '' %>" type="search" class="form-control form-control-md" placeholder="Type product name...">
            <div class="input-group-append">
              <button type="submit" class="btn btn-info"><i class="fa fa-search"></i></button>
              <a href="/dashboard/products/create" class="btn btn-primary"><i class="fa fa-plus"></i> Create</a>
            </div>
          </div>
        </form>

        <div class="dropdown-divider" style="margin: 1rem 0;"></div>
        <div class="card-body p-0">

          <!-- TODO: fix the columns flex spaces -->
          <table class="table table-striped table-bordered">
            <thead class="thead-dark">
              <tr>

                <th scope="col" style="width: 1%">#</th>
                <th scope="col" colspan="3" style="width: 30%">Name</th>
                <th scope="col" style="width: 10%">Price</th>
                <th scope="col" style="width: 8%">Image</th>
                <th scope="col" style="width: 20%">Options</th>

              </tr>
            </thead>
            <tbody>
              <% for (let i= 0; i <products.length; i++) { %>
              <% const product= products[i]; %>

              <tr>
                <th> <%= product._id.toString().slice(-4) %> </th>
                <td colspan="3"> <%= product.name %> </td>
                <td> <%= product.price %> </td>

                <!-- TODO: show image preview from image path -->
                <td> <img src="/<%= product.image %> " alt="<%= product.name %>" width="120"> </td>

                <td class="project-actions text-center">

                  <!-- TODO: add - admin can delete a product -->
                  <a href="/dashboard/products/delete/<%=product._id %>" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a>

                  <a href="/dashboard/products/<%= product._id %>/edit" class="btn btn-info btn-sm"><i class="fas fa-edit"></i> Edit</a>
                </td>

              </tr>
              <% } %>
            </tbody>
          </table>

        </div>
      </div>

      <div class="card-footer clearfix">

        <%- include('../partials/paginator.ejs', { data, url }); %>
      </div>
    </div>

  </div>
  <!--/. container-fluid -->
</section>
<!-- /.content -->